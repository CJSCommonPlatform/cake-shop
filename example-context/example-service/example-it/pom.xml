                    </execution>
                </executions>

            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jboss-config</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${jboss.home}/standalone/configuration
                            </outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/test/resources/wildfly-config</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>src/test/resources/test.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

