    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-wildfly</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.wildfly</groupId>
                                    <artifactId>wildfly-dist</artifactId>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-wars</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-command-api</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-command-api.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-command-controller</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
