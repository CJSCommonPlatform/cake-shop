<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>uk.gov.justice.services.example</groupId>
        <artifactId>example-service</artifactId>
        <version>0.8.4</version>
    </parent>
    <artifactId>example-it</artifactId>
    <properties>
        <jboss.home>${project.build.directory}/wildfly-10.0.0.Final</jboss.home>
        <server.config>standalone-test.xml</server.config>
        <wildfly.keepalive>false</wildfly.keepalive>
    </properties>
    <dependencies>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-command-api</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-command-controller</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-command-handler</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-query-api</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-query-controller</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-query-view</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-event-listener</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-client</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>javax.json</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.jsonpath</groupId>
            <artifactId>json-path-assert</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services</groupId>
            <artifactId>event-repository-liquibase</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services.example</groupId>
            <artifactId>example-liquibase</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-dbcp2</artifactId>
            <version>2.1.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>uk.gov.justice.services</groupId>
            <artifactId>event-repository-jdbc</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.awaitility</groupId>
            <artifactId>awaitility</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.skyscreamer</groupId>
            <artifactId>jsonassert</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.jsonpath</groupId>
            <artifactId>json-path-assert</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-wildfly</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.wildfly</groupId>
                                    <artifactId>wildfly-dist</artifactId>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-wars</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-command-api</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-command-api.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-command-controller</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-command-controller.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-command-handler</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-command-handler.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-event-listener</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-event-listener.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>


                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-query-api</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-query-api.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-query-controller</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-query-controller.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>uk.gov.justice.services.example</groupId>
                                    <artifactId>example-query-view</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <destFileName>example-query-view.war</destFileName>
                                    <outputDirectory>${jboss.home}/standalone/deployments
                                    </outputDirectory>
                                </artifactItem>


                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>

            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jboss-config</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${jboss.home}/standalone/configuration
                            </outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/test/resources/wildfly-config</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                            <filters>
                                <filter>src/test/resources/test.properties</filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.edugility</groupId>
                <artifactId>h2-maven-plugin</artifactId>
                <configuration>
                    <port>8092</port>
                </configuration>
                <executions>
                    <execution>
                        <id>Spawn a new H2 TCP server</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>spawn</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>Stop a spawned H2 TCP server</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <version>1.0.2.MoJ.Fork</version>
                <configuration>
                    <jbossHome>${jboss.home}</jbossHome>
                    <serverConfig>${server.config}</serverConfig>
                    <keepAlive>${wildfly.keepalive}</keepAlive>
                </configuration>
                <executions>
                    <execution>
                        <id>start-server</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-server</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>shutdown</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
