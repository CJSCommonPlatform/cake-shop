<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>example-context</artifactId>
        <groupId>uk.gov.justice.services.example</groupId>
        <version>4.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>example-service</artifactId>
    <packaging>pom</packaging>

    <properties>
        <plugins.raml-maven.version>${raml-maven-plugin.version}</plugins.raml-maven.version>
        <wiremock.service.version>1.1.0</wiremock.service.version>
        <cpp.service-component>UNKNOWN_SERVICE_COMPONENT</cpp.service-component>
        <skip.mockito.json.validation>true</skip.mockito.json.validation>
    </properties>

    <modules>
        <module>example-command</module>
        <module>example-event</module>
        <module>example-query</module>
        <module>example-custom</module>
        <module>example-it</module>
        <module>example-liquibase</module>
        <module>example-single</module>
    </modules>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>${project.build.directory}/generated-resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>${project.build.directory}/generated-test-resources</directory>
            </testResource>
        </testResources>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>uk.gov.justice.maven</groupId>
                    <artifactId>raml-maven-plugin</artifactId>
                    <version>${plugins.raml-maven.version}</version>
                    <executions>
                        <execution>
                            <id>generate-rest-clients</id>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <phase>generate-sources</phase>
                            <configuration>
                                <generatorName>
                                    uk.gov.justice.services.clients.rest.generator.RestClientGenerator
                                </generatorName>
                                <outputDirectory>${project.build.directory}/generated-sources
                                </outputDirectory>
                                <basePackageName>uk.gov.justice.api</basePackageName>
                                <generatorProperties>
                                    <serviceComponent>${cpp.service-component}</serviceComponent>
                                </generatorProperties>
                                <excludes>
                                    <exclude>**/*.messaging.raml</exclude>
                                </excludes>
                            </configuration>
                        </execution>
                        <execution>
                            <id>generate-classpath-message-clients</id>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <phase>generate-sources</phase>
                            <configuration>
                                <generatorName>
                                    uk.gov.justice.services.clients.messaging.generator.MessagingClientGenerator
                                </generatorName>
                                <outputDirectory>${project.build.directory}/generated-sources
                                </outputDirectory>
                                <basePackageName>uk.gov.justice.api</basePackageName>
                                <generatorProperties>
                                    <serviceComponent>${cpp.service-component}</serviceComponent>
                                </generatorProperties>
                                <includes>
                                    <include>**/*.messaging.raml</include>
                                </includes>
                            </configuration>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>uk.gov.justice.services</groupId>
                            <artifactId>rest-client-generator</artifactId>
                            <version>${project.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>uk.gov.justice.services</groupId>
                            <artifactId>messaging-client-generator</artifactId>
                            <version>${project.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>javax</groupId>
                            <artifactId>javaee-api</artifactId>
                            <version>7.0</version>
                            <scope>runtime</scope>
                        </dependency>
                    </dependencies>
                </plugin>

                <plugin>
                    <artifactId>generator-plugin</artifactId>
                    <groupId>uk.gov.justice.maven.generator</groupId>
                    <version>${generator-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>schema-catalog-generation</id>
                            <configuration>
                                <generatorName>uk.gov.justice.schema.catalog.generation.maven.MavenCatalogGeneratorFactory</generatorName>
                                <parserName>uk.gov.justice.schema.catalog.generation.io.parser.ListOfUriParser</parserName>
                                <sourceDirectory>src/raml/json/schema</sourceDirectory>
                                <outputDirectory>${project.build.directory}/generated-resources</outputDirectory>
                                <includes>
                                    <include>**/*.json</include>
                                </includes>
                                <excludes>
                                </excludes>
                                <generatorProperties implementation="uk.gov.justice.schema.catalog.generation.maven.CatalogGeneratorProperties">
                                    <catalogName>${project.artifactId}</catalogName>
                                    <jsonSchemaPath>json/schema/</jsonSchemaPath>
                                </generatorProperties>
                            </configuration>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <phase>generate-sources</phase>
                        </execution>
                        <execution>
                            <id>raml-schema-catalog-generation</id>
                            <configuration>
                                <generatorName>uk.gov.justice.schema.catalog.generation.maven.MavenCatalogGeneratorFactory</generatorName>
                                <parserName>uk.gov.justice.schema.catalog.generation.io.parser.ListOfUriParser</parserName>
                                <sourceDirectory>src/raml/json/schema</sourceDirectory>
                                <outputDirectory>${project.build.directory}/raml-jar</outputDirectory>
                                <includes>
                                    <include>**/*.json</include>
                                </includes>
                                <generatorProperties implementation="uk.gov.justice.schema.catalog.generation.maven.CatalogGeneratorProperties">
                                    <catalogName>${project.artifactId}</catalogName>
                                    <jsonSchemaPath>raml/json/schema/</jsonSchemaPath>
                                </generatorProperties>
                            </configuration>
                            <goals>
                                <goal>generate</goal>
                            </goals>
                            <phase>generate-sources</phase>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>uk.gov.justice.schema</groupId>
                            <artifactId>catalog-generation</artifactId>
                            <version>${json-schema-catalog.version}</version>
                        </dependency>
                        <dependency>
                            <groupId>uk.gov.justice.maven.generator</groupId>
                            <artifactId>parser-common</artifactId>
                            <version>${generator-maven-plugin.version}</version>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <archiveClasses>true</archiveClasses>
                    <attachClasses>true</attachClasses>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <profile>
            <id>raml-jar</id>
            <activation>
                <file>
                    <exists>src/raml</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>uk.gov.justice.maven</groupId>
                        <artifactId>raml-maven-plugin</artifactId>
                        <version>${plugins.raml-maven.version}</version>
                        <executions>
                            <execution>
                                <id>check-raml-syntax</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>check-syntax</goal>
                                </goals>
                                <configuration>
                                    <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                                    <!-- TODO: Enable syntax checking for all RAML -->
                                    <excludes>
                                        <exclude>**/*.messaging.raml</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>raml-lint-check</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>raml-lint-check</goal>
                                </goals>
                                <configuration>
                                    <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                                    <includes>
                                        <include>**/*.raml</include>
                                    </includes>
                                    <excludes>
                                        <exclude>**/*.messaging.raml</exclude>
                                    </excludes>
                                    <rules>
                                        <ActionsHaveHandlers/>
                                    </rules>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>lint-check-rules</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>javax</groupId>
                                <artifactId>javaee-api</artifactId>
                                <version>7.0</version>
                                <scope>runtime</scope>
                            </dependency>
                        </dependencies>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-json-schema-resources</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>
                                        ${basedir}/target/generated-resources/json/schema
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/raml/json/schema</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>activate-json-validation-mockito-extension</id>
                                <phase>process-test-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <skip>${skip.mockito.json.validation}</skip>
                                    <outputDirectory>
                                        ${project.build.directory}/generated-test-resources/mockito-extensions
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>
                                                ${project.build.directory}/shared-archive-resources
                                            </directory>
                                            <includes>
                                                <include>org.mockito.plugins.MockMaker</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>raml</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <phase>package</phase>
                                <configuration>
                                    <classifier>raml</classifier>
                                    <classesDirectory>${project.basedir}/src</classesDirectory>
                                    <includes>
                                        <include>raml/**</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>catalog-generation</id>
            <activation>
                <file>
                    <exists>src/raml</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>generator-plugin</artifactId>
                        <groupId>uk.gov.justice.maven.generator</groupId>
                        <version>${generator-maven-plugin.version}</version>
                        <configuration>
                            <parserName>uk.gov.justice.maven.generator.io.files.parser.RamlFileParser
                            </parserName>
                        </configuration>
                        <executions>
                            <execution>
                                <id>schema-catalog-generation</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                            </execution>
                            <execution>
                                <id>raml-schema-catalog-generation</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                            </execution>
                            <execution>
                                <id>generate-rest-adapters</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <generatorName>
                                        uk.gov.justice.services.adapters.rest.generator.RestAdapterGenerator
                                    </generatorName>
                                    <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                                    <outputDirectory>${project.build.directory}/generated-sources
                                    </outputDirectory>
                                    <basePackageName>uk.gov.justice.api</basePackageName>
                                    <generatorProperties implementation="uk.gov.justice.services.generators.commons.config.CommonGeneratorProperties">
                                        <serviceComponent>${cpp.service-component}
                                        </serviceComponent>
                                    </generatorProperties>
                                    <excludes>
                                        <exclude>**/*.messaging.raml</exclude>
                                    </excludes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>generate-messaging-adapters</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <generatorName>
                                        uk.gov.justice.raml.jms.core.JmsEndpointGeneratorFactory
                                    </generatorName>
                                    <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                                    <outputDirectory>${project.build.directory}/generated-sources
                                    </outputDirectory>
                                    <basePackageName>uk.gov.justice.api</basePackageName>
                                    <generatorProperties implementation="uk.gov.justice.services.generators.commons.config.CommonGeneratorProperties">
                                        <serviceComponent>${cpp.service-component}</serviceComponent>
                                    </generatorProperties>
                                    <excludes>
                                        <exclude>**/*public-event.messaging.raml</exclude>
                                        <exclude>**/*private-event.messaging.raml</exclude>
                                    </excludes>
                                    <includes>
                                        <include>**/*.messaging.raml</include>
                                    </includes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>generate-src-raml-message-clients</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <generatorName>
                                        uk.gov.justice.services.clients.messaging.generator.MessagingClientGenerator
                                    </generatorName>
                                    <sourceDirectory>${basedir}/src/raml</sourceDirectory>
                                    <outputDirectory>${project.build.directory}/generated-sources
                                    </outputDirectory>
                                    <basePackageName>uk.gov.justice.api</basePackageName>
                                    <generatorProperties  implementation="uk.gov.justice.services.generators.commons.config.CommonGeneratorProperties">
                                        <serviceComponent>${cpp.service-component}
                                        </serviceComponent>
                                    </generatorProperties>
                                    <includes>
                                        <include>**/*public-event.messaging.raml</include>
                                        <include>**/*private-event.messaging.raml</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>uk.gov.justice.schema</groupId>
                                <artifactId>catalog-generation</artifactId>
                                <version>${json-schema-catalog.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.maven.generator</groupId>
                                <artifactId>raml-parser</artifactId>
                                <version>${generator-maven-plugin.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>messaging-adapter-generator</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>messaging-client-generator</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>rest-adapter-generator</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
