<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>uk.gov.justice.services.example</groupId>
        <artifactId>example-service</artifactId>
        <version>4.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>example-event</artifactId>
    <packaging>pom</packaging>

    <modules>
        <module>example-event-listener</module>
        <module>other-event-listener</module>
        <module>example-event-processor</module>
    </modules>

    <profiles>
        <profile>
            <id>framework-generation</id>
            <activation>
                <file>
                    <exists>src/yaml</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-json-schema-resources</id>
                                <phase>validate</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>
                                        ${basedir}/target/generated-resources/json/schema
                                    </outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/yaml/json/schema</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>generator-plugin</artifactId>
                        <groupId>uk.gov.justice.maven.generator</groupId>
                        <version>${generator-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>schema-catalog-generation</id>
                                <configuration>
                                    <generatorName>
                                        uk.gov.justice.schema.catalog.generation.maven.MavenCatalogGeneratorFactory
                                    </generatorName>
                                    <parserName>
                                        uk.gov.justice.schema.catalog.generation.io.parser.ListOfUriParser
                                    </parserName>
                                    <sourceDirectory>src/yaml/json/schema</sourceDirectory>
                                    <outputDirectory>
                                        ${project.build.directory}/generated-resources
                                    </outputDirectory>
                                    <includes>
                                        <include>**/*.json</include>
                                    </includes>
                                    <excludes>
                                    </excludes>
                                    <generatorProperties
                                            implementation="uk.gov.justice.schema.catalog.generation.maven.CatalogGeneratorProperties">
                                        <catalogName>${project.artifactId}</catalogName>
                                        <jsonSchemaPath>json/schema/</jsonSchemaPath>
                                    </generatorProperties>
                                </configuration>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                            </execution>
                            <execution>
                                <id>generate-messaging-adapters</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <generatorName>
                                        uk.gov.justice.subscription.jms.core.SubscriptionJmsEndpointGeneratorFactory
                                    </generatorName>
                                    <parserName>
                                        uk.gov.justice.subscription.jms.parser.SubscriptionWrapperFileParserFactory
                                    </parserName>
                                    <sourceDirectory>${basedir}/src/yaml</sourceDirectory>
                                    <outputDirectory>${project.build.directory}/generated-sources
                                    </outputDirectory>
                                    <basePackageName>uk.gov.justice.api</basePackageName>
                                    <generatorProperties
                                            implementation="uk.gov.justice.services.generators.commons.config.CommonGeneratorProperties">
                                        <serviceComponent>${cpp.service-component}
                                        </serviceComponent>
                                    </generatorProperties>
                                    <includes>
                                        <include>**/*.messaging.yaml</include>
                                        <include>**/event-sources.yaml</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>javax</groupId>
                                <artifactId>javaee-api</artifactId>
                                <version>${javaee-api.version}</version>
                                <scope>runtime</scope>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.schema</groupId>
                                <artifactId>catalog-generation</artifactId>
                                <version>${json-schema-catalog.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>messaging-adapter-generator</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>uk.gov.justice.services</groupId>
                                <artifactId>event-subscription</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
